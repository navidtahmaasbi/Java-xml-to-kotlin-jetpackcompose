<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:layoutDirection="ltr"
    android:background="@drawable/selected_background"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="RtlHardcoded"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    >

    <TextView
        android:id="@+id/price"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans"
        android:text="520,000,000تومان"
        android:paddingHorizontal="@dimen/_16sdp"
        android:background="@drawable/blue_border"
        android:paddingVertical="@dimen/_4sdp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/fake_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/striking_text"
        android:fontFamily="@font/iran_sans"
        android:foreground="@drawable/striking_text"
        android:text=" 34,444,444تومان"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_7sdp" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans_fa_num_bold"
        android:text="3  ماهه"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/ic_checked_circle"
        app:tint="@color/gray" />

</androidx.appcompat.widget.LinearLayoutCompat>