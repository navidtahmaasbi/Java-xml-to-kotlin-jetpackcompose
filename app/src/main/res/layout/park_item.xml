<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:paddingTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_top_5_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/place_number"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@drawable/number_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/iran_sans_fa_num_bold"
            android:letterSpacing="0.2"
            android:text="756"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="پارکبان"
                android:background="@color/dark_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="رایگان"
                android:background="#4CAF50"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bottom_5_bg"
        android:gravity="center"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/iran_sans_fa_num_bold"
            android:text="46س298"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp" />

    </LinearLayout>


</LinearLayout>