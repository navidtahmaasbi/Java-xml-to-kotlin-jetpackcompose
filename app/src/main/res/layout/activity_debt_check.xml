<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@color/light_gray">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/menu_toggle"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentRight="true"
            android:onClick="onMenuToggleClicked"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_arrow_down"
            android:rotation="-90"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/barcode"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:onClick="onBarcodeIconClicked"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_qr_code"
            app:tint="@color/white"
            android:visibility="invisible"/>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/dialog_background"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/iran_sans"
                        android:text="پلاک خودرو"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/plate_new_aras_selector"
                        android:background="@drawable/unselected_background"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/iran_sans"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:text="ارس جدید"/>

                    <TextView
                        android:id="@+id/plate_old_aras_selector"
                        android:background="@drawable/unselected_background"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/iran_sans"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:text="ارس"/>

                    <TextView
                        android:id="@+id/plate_simple_selector"
                        android:background="@drawable/selected_background"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/iran_sans"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:text="ملی"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/plate_simple_area"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/unselected_background">

                        <EditText
                            android:inputType="numberDecimal"
                            android:maxLength="2"
                            android:id="@+id/plate_simple_tag1"
                            android:background="@drawable/unselected_background"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans_fa_num"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_13sdp"
                            android:hint="56"
                            android:letterSpacing="0.3"/>

                        <EditText
                            android:maxLength="1"
                            android:id="@+id/plate_simple_tag2"
                            android:background="@drawable/unselected_background"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_13sdp"
                            android:hint="س"/>

                        <EditText
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:id="@+id/plate_simple_tag3"
                            android:background="@drawable/unselected_background"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans_fa_num"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_13sdp"
                            android:hint="526"
                            android:letterSpacing="0.3"/>

                    </LinearLayout>

                    <EditText
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:id="@+id/plate_simple_tag4"
                        android:background="@drawable/unselected_background"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans_fa_num"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:hint="15"
                        android:letterSpacing="0.3"/>

                </LinearLayout>

                <EditText
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:visibility="gone"
                    android:background="@drawable/unselected_background"
                    android:id="@+id/plate_old_aras"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_fa_num"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/_13sdp"
                    android:hint="12345"
                    android:letterSpacing="0.3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <LinearLayout
                    android:id="@+id/plate_new_aras_area"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp">

                    <EditText
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:id="@+id/plate_new_aras_tag1"
                        android:background="@drawable/unselected_background"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans_fa_num"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:hint="12345"
                        android:letterSpacing="0.3"/>

                    <EditText
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:id="@+id/plate_new_aras_tag2"
                        android:background="@drawable/unselected_background"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans_fa_num"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp"
                        android:hint="55"
                        android:letterSpacing="0.3"/>



                </LinearLayout>

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/blue_bg_5"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_40sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="مشاهده بدهی"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/debt_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/dialog_background"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/debt_amount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans_fa_num_bold"
                        android:text="-15000 تومان"
                        android:gravity="right"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans"
                        android:text="بدهی شما"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_13sdp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/blue_bg_5"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_40sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="پرداخت بدهی"
                    android:textColor="@color/white" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="40"
                tools:listitem="@layout/debt_list_item" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


