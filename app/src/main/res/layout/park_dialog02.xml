<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_20sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_background"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_fa_num"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:text="87"/>

        <TextView
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_13sdp"
            android:text="جایگاه شماره "/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_parking"
            app:tint="@color/green" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:fontFamily="@font/iran_sans_fa_num"
            android:text="15  295 س 46"
            android:letterSpacing="0.08"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/img"
            android:fontFamily="@font/iran_sans"
            android:text="شماره پلاک خودرو"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_car_outline"
            app:tint="@color/green" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/selected_background">

        <TextView
            android:id="@+id/start_time"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/iran_sans_fa_num_bold"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_13sdp"
            android:text="14 : 25"

            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"/>

        <TextView
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/iran_sans"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp"
            android:text="ساعت شروع "
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/park_time"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/iran_sans_fa_num_bold"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp"
            android:text="3 ساعت و 16 دقیقه"
            android:gravity="center"/>

        <TextView
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/iran_sans"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp"
            android:text="مدت زمان پارک "

            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_clock"
            app:tint="@color/green" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/selected_background"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/iran_sans"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_13sdp"
        android:text="افزایش شارژ"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/iran_sans"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp"
            android:text="پرینت قبض"

            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_print"
            app:tint="@color/green" />

    </LinearLayout>


    <TextView
        android:id="@+id/submit"
        android:fontFamily="@font/iran_sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مشاهده صورتحساب"
        android:paddingRight="@dimen/_40sdp"
        android:paddingLeft="@dimen/_40sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/white"
        android:background="@drawable/blue_bg_5"/>

</LinearLayout>