<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azarpark.watchman">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login_bg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Watchman">
        <activity
            android:name=".CarNumberChargeActivity"
            android:exported="true" />
        <activity
            android:name=".DebtCheckActivity"
            android:exported="true" />
        <activity
            android:name=".ExitRequestActivity"
            android:exported="true" />
        <activity
            android:name=".DebtListActivity"
            android:exported="true" />
        <activity
            android:name=".ExitRequestList"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Watchman.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true" />
    </application>

</manifest>